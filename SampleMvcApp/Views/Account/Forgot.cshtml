@model SampleMvcApp.ViewModels.ForgotViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Account" asp-action="Forgot" method="post">
                <h4>Forgot Password</h4>
                @if (@ViewData["status"].ToString() != "") { 
                    <div class="alert alert-info" role="alert">@ViewData["status"]</div>
                }
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control input-lg" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
                </div>
            </form>
        </section>
    </div>
</div>